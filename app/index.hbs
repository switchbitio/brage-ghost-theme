{{!< default}}

<header>

  {{#is "home"}}
  <section {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}); background-size: cover{{else}}no-cover{{/if}}">
    {{#if @blog.logo}}
      <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
    {{else}}
      <img src="{{asset "/images/brage-logo.png"}}" alt="Brage Theme"/>
    {{/if}}
    <h1>{{@blog.title}}</h1>

    <h2 class="page-description">{{@blog.description}}</h2>
  </section>
  {{/is}}

</header>

<main>

  <section>
    {{#foreach posts}}
    {{> "post"}}
    {{/foreach}}
  </section>

</main>
